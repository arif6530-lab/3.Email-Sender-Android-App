<HomeScreen>:
    GridLayout:
        cols: 1
        padding: 5,5
        spacing: 20,20
        Label:
            text: "Hii There!!"
            font_size:'20sp'
        Label:
            text: "Click Image to know information about this App"
            font_size:'20sp'
            text_size: self.width, None
            
        RelativeLayout:
            ImageButton:
                source: "homepage.png"
                size_hint: 1.3,1.3
                pos_hint:{'center_x':0.5,'center_y':0.5}
                on_press: root.printinfo()
        
        Label:
            id: message
            text: ""
            text_size: self.width, None
            
        
        RelativeLayout:
            ImageButton:
                source: "forward.png"
                size_hint: 0.8,0.6
                pos_hint:{'center_x':0.9,'center_y':0.3}
                on_press: root.goto()




<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            padding: 15,15
            spacing: 20,20
              
            RelativeLayout:
                ImageButton:
                    source:'logo2.png'
                    size_hint: 3,3
                    pos_hint: {'center_x':0.5, 'center_y':0.01}

            Label:
                text: "User Login"
                font_size: '20sp'
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "password"
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3,0.7
                    pos_hint: {'center_x':0.5, 'center_y':0.6}
                    
          
          
            Label:
                id: message
                text: ""




        GridLayout:
            cols: 2
            padding: 15,15
            spacing: 10,10
            RelativeLayout:
                Button:
                    text: "Forgot Password"
                    on_press: root.forgotpassword()
                    size_hint: 0.5,0.3
                    pos_hint: {'center_x':0.3, 'center_y':0.2}
                    background_color:1,1,1,0
                    opacity: 1 if self.state=='normal' else 0.5
                    
            RelativeLayout:      
                Button:
                    text: "Sign Up"
                    on_press: root.signup()
                    size_hint: 0.5,0.3
                    background_color: 1, 1, 1, 0
                    pos_hint: {'center_x':0.7, 'center_y':0.2}
                    opacity: 1 if self.state=='normal' else 0.5
                    
                        


<SignupScreen>:
    GridLayout:
        padding: 15,15
        spacing: 10,10
        cols: 1
        RelativeLayout:
            ImageButton:
                source: "backbutton.png"
                size_hint: 0.3,0.2
                pos_hint:{'center_x':0.1,'center_y':0.80}
                on_press: root.goto()

            ImageButton:
                source: "newhere.png"
                size_hint: 1,1
                pos_hint:{'center_x':0.5,'center_y':0.2}


        Label:
            text: "Looks like you're New here"
            font_size:'20sp'
        TextInput:
            id: username
            hint_text: "username"
            size_hint: 0.5,0.3
        TextInput:
            id: password
            hint_text: "password"
            size_hint: 0.5,0.3
        RelativeLayout:
            Button:
                text: "Sign Up"
                on_press: root.add_entry(root.ids.username.text,root.ids.password.text)
                size_hint: 0.3,0.2
                pos_hint: {'center_x':0.5, 'center_y':0.6}

       
                        



<SignupsuccessScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Signed Up Succesfully"
            font_size:'20sp'
        RelativeLayout:
            Button:
                text: "Login Page"
                on_press: root.goto()
                size_hint: 0.3,0.2
                pos_hint: {'center_x':0.5, 'center_y':0.6}
                
            

<LoginsuccessScreen>:
    GridLayout:
        padding: 15,15
        spacing:20,20
        cols: 1
        RelativeLayout:
            ImageButton:
                #text: "Logout"
                on_press: root.logout()
                source: 'logout_hover.png' if self.hovered else "logout_nothover.png"
                size_hint: 0.3,0.3
                pos_hint: {'center_x':0.9, 'center_y':0.8}

        TextInput:
            id: address
            hint_text: "Enter a valid receivers email address"
            size_hint: 0.10, 0.5
        RelativeLayout:
            Button:
                text: "START"
                on_press: root.send_email(root.ids.address.text)
                size_hint: 0.3,0.3
                pos_hint: {'center_x':0.5, 'center_y':0.6}
        ScrollView:      
            Label:
                id: output
                text: ""
                font_size: '20sp'
                



<ForgotPasswordScreen>:
    GridLayout:
        cols: 1
        padding:10 ,10 

        RelativeLayout:
            ImageButton:
                source: "backbutton.png"
                size_hint: 0.3,0.2
                pos_hint:{'center_x':0.1,'center_y':0.80}
                on_press: root.goto()

            ImageButton:
                source: "forgotpass.png"
                size_hint: 1,1
                pos_hint: {'center_x':0.5, 'center_y':0.2}

        Label:
            text: "Fetch Your Password"
        TextInput:
            id: username
            hint_text: "username"
            size_hint: 0.5,0.5
        RelativeLayout:
            Button:
                text: "Get Password"
                on_press: root.getpassword(root.ids.username.text)
                size_hint: 0.4,0.3
                pos_hint: {'center_x':0.5,'center_y':0.4}
        Label:
            id: pwd
            text: ""
            


<RootWidget>:
    HomeScreen:
        name: "Home_screen"
    LoginScreen:
        name: "Login_screen"
    SignupScreen:
        name: "Signup_screen"
    SignupsuccessScreen:
        name: "Signup_success_screen"
    LoginsuccessScreen:
        name: "Login_success_screen"
    ForgotPasswordScreen:
        name: "Forgot_password_screen"


